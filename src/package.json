{
    "name": "next-electron",
    "version": "1.0.0",
    "description": "Next.js + Electron.js Boilerplate",
    "main": "main/main.js",
    "repository": "https://github.com/shadowwalker/next-electron",
    "author": "Wei Wang",
    "license": "MIT",
    "private": false,
    "keywords": [
        "Boilerplate",
        "Electron",
        "Next"
    ],
    "scripts": {
        "build": "run-s build:*",
        "build:next": "next build app",
        "start": "run-s build start:dev",
        "start:dev": "run-p start:next-start start:electron-start",
        "start:next-start": "next start app --port 3000",
        "start:electron-start": "cross-env PORT=3000 electron .",
        "package": "run-s build package:*",
        "package:next-export": "next export app -o ../build/app"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "electron": "^3.0.4",
        "next": "^7.0.2",
        "npm-run-all": "^4.1.3",
        "react": "^16.5.2",
        "react-dom": "^16.5.2"
    },
    "dependencies": {
        "app-root-path": "^2.1.0"
    }
}
